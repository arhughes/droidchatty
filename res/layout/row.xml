<?xml version="1.0" encoding="utf-8"?>
<cc.hughes.CheckableRelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="?android:attr/listPreferredItemHeight"
  android:paddingBottom="6dip"
  android:paddingLeft="6dip"
  android:paddingRight="6dip"
  android:paddingTop="2dip"
  android:background="@color/thread_selector"
  >
 	 <View
 	 	 android:id="@+id/threadModeration"
 	 	 android:layout_height="4dip"
 	 	 android:layout_width="fill_parent"
 	 />
     <TextView
         android:id="@+id/textUserName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#f3e7b5"
         android:textSize="12dip"
         android:layout_below="@id/threadModeration"
     />
     <TextView
         android:id="@+id/textReplyCount"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/textUserName"
         android:layout_below="@id/threadModeration"
         android:paddingLeft="5dip"
         android:textColor="#888"
         android:textSize="12dip"
     />
     <TextView
     	 android:id="@+id/textPostedTime"
     	 android:layout_width="wrap_content"
     	 android:layout_height="wrap_content"
     	 android:layout_alignParentRight="true"
         android:layout_below="@id/threadModeration"
         android:textColor="#666"
         android:textSize="12dip"
     />
     <TextView
         android:id="@+id/textContent"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/textUserName"
         android:ellipsize="marquee"
         android:maxLines="2"
         android:textSize="14dip"
     />
</cc.hughes.CheckableRelativeLayout>
